{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "browser": false,
        "chrome": false,
        "Downloads": false,
        "FileUtils": false,
        "require": false,
        "exports": false,
        "ctypes": false,
        "XPCOMUtils": false,
        "NetUtil": false,
        "Task": false,
        "OS": false
    },
    "rules": {
        "no-tabs": "warn",
        "no-set-state": "off",
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error", "always"
        ],
        "no-console": [
            "error", { "allow": ["log", "warn", "error"] }
        ]
    }
}
